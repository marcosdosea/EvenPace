<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EvenPace</title>

    <link rel="stylesheet" href="~/css/theme.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
</head>
<body>
    <div class="dashboard-container">

        <aside class="sidebar">

            <div class="sidebar-header">
                <a asp-controller="Evento" asp-action="Index">
                    <img src="~/imagens/logo-amarela-evenpace.jpeg" alt="Logo EvenPace" class="logo-sidebar-top" />
                </a>
            </div>

            <nav class="sidebar-menu">
                @{
                    // Lógica para verificar se o botão deve ficar ativo (amarelo)
                    var controller = ViewContext.RouteData.Values["Controller"]?.ToString();
                    var action = ViewContext.RouteData.Values["Action"]?.ToString();

                    // Verifica se está no EventoController e na ação Index
                    bool isHomeActive = string.Equals(controller, "Evento", StringComparison.OrdinalIgnoreCase)
                    && string.Equals(action, "Index", StringComparison.OrdinalIgnoreCase);
                }

                <a asp-controller="Evento" asp-action="Index"
                   class="menu-item @(isHomeActive ? "active" : "")">
                    <span class="menu-icon">🏠</span>
                    <span class="menu-text">Home</span>
                </a>
            </nav>

            <div class="sidebar-footer">
                <a href="@Url.Action("Perfil", "Usuario")" style="text-decoration: none; color: inherit;">
                    <div class="user-avatar">👤</div>
                </a>
            </div>
        </aside>

        <main class="content-area">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>