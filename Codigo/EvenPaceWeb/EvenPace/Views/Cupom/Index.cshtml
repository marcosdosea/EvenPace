@model IEnumerable<Models.CupomViewModel>

@{
    ViewData["Title"] = "Listagem de Cupons";
}

<style>
    main.index-page {
        padding: 20px;
        font-family: var(--font-standard);
        background-color: var(--bg-white);
    }

    header.index-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .btn-create {
        background-color: var(--bg-light);
        color: var(--text-black);
        padding: 12px 30px;
        border-radius: 12px;
        font-weight: bold;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-create:hover {
            background-color: var(--primary-hover);
            color: var(--text-black);
        }

    section.table-container {
        overflow-x: auto;
    }

    .evenpace-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .evenpace-table th {
            background-color: var(--bg-light);
            color: var(--text-black);
            padding: 15px;
            text-align: left;
        }

        .evenpace-table td {
            padding: 15px;
            border-bottom: 1px solid var(--bg-light);
            color: var(--text-black);
        }

        .evenpace-table tbody tr:nth-child(even) {
            background-color: var(--bg-light);
        }

    .action-link {
        color: var(--text-grey);
        font-weight: bold;
        text-decoration: none;
        margin-right: 15px;
    }

        .action-link:hover {
            color: var(--text-black);
            text-decoration: underline;
        }

    .link-delete {
        color: #d9534f;
    }
</style>

<main class="index-page">
    <header class="index-header">
        <section>
            <h1>Cupons</h1>
            <p style="color: var(--text-grey);">[Nome da Corrida].</p>
        </section>

        <nav>
            <a asp-action="Create" class="btn-create">Criar Cupom</a>
        </nav>
    </header>

    <section class="table-container">
        <table class="evenpace-table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>Início</th>
                    <th>Término</th>
                    <th>Status</th>
                    <th>Disponível</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Nome</strong></td>
                        <td>@item.DataInicio.ToShortDateString()</td>
                        <td>@item.DataTermino.ToShortDateString()</td>
                        <td>@item.Status</td>
                        <td>@item.QuantiadeDisponibilizada</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="action-link">Editar</a>
                            <a href="javascript:void(0)"
                               class="action-link link-delete"
                               onclick="confirmarExclusao('@item.Id', '@item.Nome')">
                                Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <div class="modal fade" id="modalExcluir" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border-radius: 15px;">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Exclusão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Tem certeza que deseja excluir o cupom <strong id="nomeCupomModal"></strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>

                    <form id="formExcluir" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    function confirmarExclusao(id, nome) {
        // Preenche o nome do cupom no texto do modal
        document.getElementById('nomeCupomModal').textContent = nome;

        // Ajusta a URL do formulário para o ID selecionado
        document.getElementById('formExcluir').action = '/Cupom/Delete/' + id;

        // Abre o modal
        var modal = new bootstrap.Modal(document.getElementById('modalExcluir'));
        modal.show();
    }
</script>