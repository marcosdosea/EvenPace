@model IEnumerable<Models.CupomViewModel>

@{
    ViewData["Title"] = "Listagem de Cupons";
}

<style>
    :root {
        --primary-yellow: #ffd700;
        --primary-hover: #e6c200;
        --bg-light: #f8f9fa;
    }

    main.index-page {
        padding: 20px;
    }

    .btn-create {
        background-color: var(--bg-light);
        color: #000;
        border: 2px solid #000;
        font-weight: bold;
        border-radius: 12px;
        transition: 0.3s;
    }

        .btn-create:hover {
            background-color: var(--primary-yellow);
            color: #000;
        }

    .evenpace-table thead th {
        background-color: var(--bg-light);
        border-bottom: 2px solid #dee2e6;
        padding: 15px;
    }

    .evenpace-table td {
        vertical-align: middle;
        padding: 15px;
    }

    .status-badge {
        font-size: 0.85rem;
        padding: 5px 10px;
        border-radius: 20px;
    }
</style>

<main class="container index-page">
    <header class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <section class="text-center text-md-start">
            <h1 class="fw-bold mb-0">Cupons</h1>
            <p class="text-muted mb-0">[Nome da Corrida]</p>
        </section>

        <nav>
            <a asp-action="Create" class="btn btn-create px-4 py-2">
                <i class="bi bi-plus-lg"></i> Criar Cupom
            </a>
        </nav>
    </header>

    <section class="card shadow-sm border-0 rounded-4">
        <div class="table-responsive p-2">
            <table class="table evenpace-table mb-0">
                <thead>
                    <tr>
                        <th class="border-0">@Html.DisplayNameFor(model => model.Nome)</th>
                        <th class="border-0">Início</th>
                        <th class="border-0">Término</th>
                        <th class="border-0 text-center">Status</th>
                        <th class="border-0 text-center">Disponível</th>
                        <th class="border-0 text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="fw-bold">@item.Nome</span></td>
                            <td class="text-nowrap">@item.DataInicio.ToShortDateString()</td>
                            <td class="text-nowrap">@item.DataTermino.ToShortDateString()</td>
                            <td class="text-center">
                                @if (item.Status)
                                {
                                    <span class="badge bg-success status-badge">Ativo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger status-badge">Desativado</span>
                                }
                            </td>
                            <td class="text-center">
                                <span class="badge bg-light text-dark border">@item.QuantiadeDisponibilizada</span>
                            </td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark border-0 fw-bold">
                                        Editar
                                    </a>
                                    <button type="button"
                                            class="btn btn-sm btn-outline-danger border-0 fw-bold"
                                            onclick="confirmarExclusao('@item.Id', '@item.Nome')">
                                        Excluir
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>

    <div class="modal fade" id="modalExcluir" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow" style="border-radius: 20px;">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold">Confirmar Exclusão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body py-4">
                    Tem certeza que deseja excluir o cupom <strong id="nomeCupomModal" class="text-danger"></strong>?
                    <p class="small text-muted mt-2 mb-0">Esta ação não pode ser desfeita.</p>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-light fw-bold px-4" data-bs-dismiss="modal">Cancelar</button>
                    <form id="formExcluir" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger fw-bold px-4">Confirmar Exclusão</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    function confirmarExclusao(id, nome) {
        document.getElementById('nomeCupomModal').textContent = nome;
        document.getElementById('formExcluir').action = '/Cupom/Delete/' + id;

        var modal = new bootstrap.Modal(document.getElementById('modalExcluir'));
        modal.show();
    }
</script>