@model IEnumerable<Models.EventoViewModel>

@{
    ViewData["Title"] = "Histórico de Eventos";
}

<link rel="stylesheet" href="~/css/eventos.css" />

<div class="historico-container">
    <h2 class="titulo-pagina">Histórico de eventos</h2>

    <div class="grid-eventos">
        @foreach (var item in Model)
        {
                <div class="card-evento">
                    <img src="@(string.IsNullOrEmpty(item.Imagem) ? "/img/default-race.png" : item.Imagem)" 
                         alt="Banner do Evento" class="card-img" />

                    <div class="card-content">
                        <h3>@item.Nome</h3>

                        <div class="info-row">
                            <div class="info-item">
                                <span>Local</span>
                            @item.Cidade
                            </div>
                            <div class="info-item">
                                <span>Data</span>
                            @item.Data.ToString("dd/MM")
                            </div>
                            <div class="info-item">
                                <span>Horário</span>
                            @item.Data.ToString("HH:mm")
                            </div>
                        </div>

                        <div class="buttons-row">
                            <a href="#" class="btn-acao btn-cancelar">Cancelar Inscrição</a>
                            <a href="#" class="btn-acao btn-status">Status da inscrição</a>
                        </div>

                        <a asp-action="Details" asp-route-id="@item.Id" class="btn-avaliar">Avaliar Corrida</a>
                    </div>
                </div>
        }
    </div>

    <a href="javascript:history.back()" class="btn-voltar">Voltar</a>
</div>
