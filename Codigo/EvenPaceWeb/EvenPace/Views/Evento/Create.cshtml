@model Models.EventoViewModel

@{
    ViewData["Title"] = ViewBag.TituloPagina;
    Layout = "~/Views/Shared/_LayoutOrganizacao.cshtml";
    <link rel="stylesheet" href="~/css/evento.css" />
}

<main class="main-container">

    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="All" class="alert alert-danger"></div>
    }

    <header class="page-header">
        <div class="header-titles">
            <h1>@ViewBag.TituloPagina</h1>
            <p class="subtitle">Preencha as informações da corrida</p>
        </div>
    </header>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="form-evento form-card-bg">

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Imagem" />
        <input type="hidden" asp-for="IdOrganizacao" />

        <div class="form-block">
            <label asp-for="Nome" class="label-bold">NOME DO EVENTO</label>
            <input asp-for="Nome" class="input-gray" placeholder="Ex: Corrida de Verão 2026" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="row-flex">
            <div class="col-grow">
                <label asp-for="DataOnly" class="label-bold">DATA</label>
                <input asp-for="DataOnly" class="input-gray" type="date" />
                <span asp-validation-for="DataOnly" class="text-danger"></span>
            </div>
            <div class="col-grow">
                <label asp-for="HoraOnly" class="label-bold">HORÁRIO</label>
                <input asp-for="HoraOnly" class="input-gray" type="time" />
                <span asp-validation-for="HoraOnly" class="text-danger"></span>
            </div>
            <div class="col-grow">
                <label asp-for="NumeroParticipantes" class="label-bold">Nº PARTICIPANTES</label>
                <input asp-for="NumeroParticipantes" class="input-gray" type="number" placeholder="0" min="0" onchange="if(this.value < 0) this.value = 0;" />
                <span asp-validation-for="NumeroParticipantes" class="text-danger"></span>
            </div>
        </div>

        <div class="form-block">
            <label class="label-bold">IMAGEM DO BANNER</label>
            <div class="input-wrapper">
                <input type="text" id="fileNameDisplay" class="input-gray" placeholder="Selecionar arquivo..." readonly />
                <span class="icon-upload">⬇</span>
                <input asp-for="ImagemUpload" class="file-hidden" accept="image/*" onchange="document.getElementById('fileNameDisplay').value = this.files[0].name" />
            </div>
            <span asp-validation-for="ImagemUpload" class="text-danger"></span>
        </div>

        <div class="form-block">
            <label asp-for="Descricao" class="label-bold">DESCRIÇÃO</label>
            <textarea asp-for="Descricao" class="input-gray" placeholder="Detalhes da prova..."></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-block">
            <label class="label-bold">DISTÂNCIAS</label>
            <div class="distancia-container">
                <label class="check-tag"><input type="checkbox" asp-for="Distancia3" /> <span>3KM</span></label>
                <label class="check-tag"><input type="checkbox" asp-for="Distancia5" /> <span>5KM</span></label>
                <label class="check-tag"><input type="checkbox" asp-for="Distancia7" /> <span>7KM</span></label>
                <label class="check-tag"><input type="checkbox" asp-for="Distancia10" /> <span>10KM</span></label>
                <label class="check-tag"><input type="checkbox" asp-for="Distancia15" /> <span>15KM</span></label>
                <label class="check-tag"><input type="checkbox" asp-for="Distancia21" /> <span>21KM</span></label>
                <label class="check-tag"><input type="checkbox" asp-for="Distancia42" /> <span>42KM</span></label>
            </div>
        </div>

        <h3 style="margin-top: 30px; font-size: 1.1rem; border-bottom: 1px solid #eee; padding-bottom: 10px;">Localização</h3>

        <div class="row-flex">
            <div class="col-grow">
                <label asp-for="Rua" class="label-bold">RUA</label>
                <input asp-for="Rua" class="input-gray" />
                <span asp-validation-for="Rua" class="text-danger"></span>
            </div>
            <div class="col-grow">
                <label asp-for="Bairro" class="label-bold">BAIRRO</label>
                <input asp-for="Bairro" class="input-gray" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
        </div>

        <div class="row-flex">
            <div class="col-grow">
                <label asp-for="Cidade" class="label-bold">CIDADE</label>
                <input asp-for="Cidade" class="input-gray" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="col-fixed" style="width: 100px;">
                <label asp-for="Estado" class="label-bold">UF</label>
                <input asp-for="Estado" class="input-gray" maxlength="2" style="text-transform: uppercase;" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
        </div>

        <div class="form-block">
            <label asp-for="InfoRetiradaKit" class="label-bold">INFORMAÇÕES DE RETIRADA DO KIT</label>
            <textarea asp-for="InfoRetiradaKit" class="input-gray" style="min-height: 80px;"></textarea>
            <span asp-validation-for="InfoRetiradaKit" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-green">Salvar</button>
            <a asp-action="Index" class="btn-gray">Voltar</a>
        </div>

    </form>
</main>
<script src="~/js/evento.js"></script>