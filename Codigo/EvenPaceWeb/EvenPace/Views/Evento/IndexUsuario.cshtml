<style>
body {
    background: #f5c400;
}
.app-card {
    background: #fff;
    border-radius: 1rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 85vh;
    position: relative;
}
.header {
    padding: 18px;
    border-bottom: 1px solid #eee;
}
.search-wrapper {
    display: flex;
}
