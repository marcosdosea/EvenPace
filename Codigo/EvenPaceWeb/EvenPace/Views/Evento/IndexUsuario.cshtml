.phone {
    width: 360px;              
    max-width: 100%;           
    height: 640px;            
    margin: 20px auto;
    background-color: #fff;
    border-radius: 30px;      
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    font-size: 16px;
    border: 1px solid #ccc;  
    position: relative;
}

  html, body {
    height: 100%;
}

.app-content {
    flex: 1;
    overflow-y: auto;
    padding: 10px;
}


    .header {
        padding: 18px;
        border-bottom: 1px solid #eee;
    }

    .search-wrapper {
        display: flex;
        align-items: center;
    }

    .search-input {
        flex: 1;
        border: 1px solid #000;
        border-right: none;
        border-radius: 25px 0 0 25px;
        padding: 10px 14px;
        outline: none;
    }

    .search-btn {
        background: #000;
        color: #fff;
        border: 1px solid #000;
        border-radius: 0 25px 25px 0;
        padding: 10px 16px;
        cursor: pointer;
    }

    .filter-box {
        margin-top: 10px;
        font-size: .9rem;
        cursor: pointer;
    }


    .events-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 18px;
    }

    .event-card {
        border-radius: 14px;
        overflow: hidden;
        border: 1px solid #eee;
        background: #fff;
    }

    .event-card img {
        width: 100%;
        height: 220px;
        object-fit: cover;
        background: #eef1f4;
    }

    .event-body {
        padding: 14px;
    }

    .event-title {
        font-weight: bold;
        font-size: 1rem;
        margin-bottom: 6px;
    }

    .event-info {
        font-size: .9rem;
        color: #6c757d;
    }

    .bottom-nav {
        height: 70px;
        border-top: 1px solid #ddd;
        display: flex;
        justify-content: space-around;
        align-items: center;
        font-size: 12px;
        background: #fff;
          flex-shrink: 0;
    }

    .bottom-nav div {
        text-align: center;
        cursor: pointer;
    }

    .bottom-nav div:hover {
        color: #f5c400;
    }


