.events-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
}
.event-card {
    border-radius: 14px;
    overflow: hidden;
    border: 1px solid #eee;
    background: #fff;
    display: flex;
    flex-direction: column;
}
.event-card img {
    width: 100%;
    height: 150px;
    object-fit: cover;
}
.event-body {
    padding: 10px;
}
.event-title {
    font-weight: bold;
}
.event-info {
