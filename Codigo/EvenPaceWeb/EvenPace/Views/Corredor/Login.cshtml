@model Models.CorredorViewModel

@{
    Layout = null;
}

<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EvenPace - Login</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .gradient-custom {
            background: #f6d476;
            background: -webkit-linear-gradient(to right, #2E2E2E, #D9D9D9);
            background: linear-gradient(180deg, #FFD700 0%, #FFD700 60%, #111111 100%);
        }
    </style>
</head>

<body>

<section class="vh-100 gradient-custom d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white shadow-lg" style="border-radius: 1rem;">
                    <div class="card-body p-5">

                        <h2 class="fw-bold mb-2 text-uppercase text-center">Login</h2>
                        <p class="text-white-50 mb-4 text-center">Bem-vindo Ã  comunidade EvenPace</p>

                        <form method="post" action="/login">
                            <div class="mb-4">
                                <label class="form-label" for="email">Email</label>
                                <input 
                                    type="email" 
                                    id="email" 
                                    name="email"
                                    class="form-control form-control-lg"
                                    placeholder="Digite seu email"
                                    required>
                            </div>

                            <div class="mb-4">
                                <label class="form-label" for="senha">Senha</label>
                                <input 
                                    type="password" 
                                    id="senha" 
                                    name="senha"
                                    class="form-control form-control-lg"
                                    placeholder="Digite sua senha"
                                    required>
                            </div>

                            <div class="text-center mb-4">
                                <a class="text-white-50" href="/esqueci-senha">Esqueci a senha</a>
                            </div>

                            <div class="d-grid gap-2 mb-4">
                                <button class="btn btn-outline-light btn-lg" type="submit">
                                    Entrar
                                </button>
                            </div>

                            <hr>

                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-light btn-lg" type="button">
                                    Entrar com Google
                                </button>
                            </div>
                            <br/>
                            <div class="d-grid gap-2">
                                <a href="http://localhost:5157/Corredor/Create" class=" btn btn-outline-light btn-lg" >
                                        Cadastra-se Manualmente
                                </a>
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
