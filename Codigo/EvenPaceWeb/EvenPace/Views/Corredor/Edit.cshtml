@model Models.CorredorViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Editar Perfil</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            min-height: 100vh;
            background: linear-gradient(180deg, #FFD700 0%, #FFD700 60%, #111 100%);
            font-family: Arial, sans-serif;
        }

        .page {
            padding: 20px;
            text-align: center;
            color: #000;
        }

        .back {
            position: absolute;
            left: 20px;
            top: 20px;
            font-size: 32px;
            text-decoration: none;
            color: #000;
        }

        .avatar {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            background: #fff;
            margin: 40px auto 10px;
            overflow: hidden;
        }

        .avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .title {
            font-weight: bold;
            margin-bottom: 25px;
        }

        label {
            margin-top: 15px;
            font-weight: 600;
        }

        .input-box {
            background: #000;
            border-radius: 14px;
            padding: 10px;
        }

        .input-box input {
            width: 100%;
            border: none;
            background: transparent;
            color: #FFD700;
            text-align: center;
            outline: none;
            font-weight: bold;
        }

        .btn-save {
            margin-top: 40px;
            background: #FFD700;
            border: none;
            padding: 12px 40px;
            border-radius: 12px;
            font-weight: bold;
        }
    </style>
</head>

<body>

<a asp-action="Index" class="back">â€¹</a>

<div class="page">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">

            <h5 class="title text-center mb-4">Nova foto de Perfil</h5>

            @* TODO: Trocar para que a imagem seja possivel ser alterada *@
            <div class="avatar mx-auto mb-4">
                <img src="https://i.pravatar.cc/300" alt="Foto Perfil"/>
            </div>

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id"/>

                <div class="mb-3">
                    <label class="form-label">
                        Nome <i class="bi bi-pencil-fill ms-2"></i>
                    </label>
                    <div class="input-box">
                        <input asp-for="Nome" class="form-control bg-dark text-warning border-0 text-center"/>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">
                        E-mail <i class="bi bi-pencil-fill ms-2"></i>
                    </label>
                    <div class="input-box">
                        <input asp-for="Email" class="form-control bg-dark text-warning border-0 text-center"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <label class="form-label">
                            Data de Nascimento <i class="bi bi-pencil-fill ms-2"></i>
                        </label>
                        <div class="input-box">
                            <input asp-for="DataNascimento" type="date"
                                   class="form-control bg-dark text-warning border-0 text-center"/>
                        </div>
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                        <label class="form-label">
                            CPF <i class="bi bi-pencil-fill ms-2"></i>
                        </label>
                        <div class="input-box">
                            <input asp-for="CPF"
                                   class="form-control bg-dark text-warning border-0 text-center"/>
                        </div>
                    </div>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-warning fw-bold">
                        Concluir
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
