@model Models.CorredorViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Editar Perfil</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            margin: 0;
            min-height: 100vh;
            background: linear-gradient(180deg, #FFD700 0%, #FFD700 60%, #111 100%);
            font-family: Arial, sans-serif;
        }

        .page {
            padding: 20px;
            text-align: center;
            color: #000;
        }

        .back {
            position: absolute;
            left: 20px;
            top: 20px;
            font-size: 32px;
            text-decoration: none;
            color: #000;
        }

        .avatar {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            background: #fff;
            margin: 40px auto 10px;
            overflow: hidden;
        }

        .avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .title {
            font-weight: bold;
            margin-bottom: 25px;
        }

        label {
            margin-top: 15px;
            font-weight: 600;
        }

        .input-box {
            background: #000;
            border-radius: 14px;
            padding: 10px;
        }

        .input-box input {
            width: 100%;
            border: none;
            background: transparent;
            color: #FFD700;
            text-align: center;
            outline: none;
            font-weight: bold;
        }

        .btn-save {
            margin-top: 0;
            background: #FFD700;
            border: none;
            padding: 12px 40px;
            border-radius: 12px;
            font-weight: bold;
        }
    </style>
</head>

<body>

<a asp-controller="Corredor" asp-action="Edit" asp-route-id="@Model.Id"></a>

<div class="page" style="border-radius: 1rem">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">

            <h5 class="title text-center mb-4">Foto de Perfil</h5>

            @* TODO: Trocar para que a imagem seja possivel ser alterada *@
            <div class="avatar mx-auto mb-4">
                <img src="https://i.pravatar.cc/300" alt="Foto Perfil"/>
            </div>

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id"/>
                @* Mantém a senha atual caso o usuário não queira alterá-la *@
                <input type="hidden" asp-for="Senha" />

                <div class="mb-3">
                    <label class="form-label" asp-for="Nome">
                        Nome <i class="bi bi-pencil-fill ms-2"></i>
                    </label>
                    <input asp-for="Nome"  class="form-control bg-dark text-warning border-0 text-center"/>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Email">
                        E-mail <i class="bi bi-pencil-fill ms-2"></i>
                    </label>
                    <input asp-for="Email" type="email" class="form-control bg-dark text-warning border-0 text-center"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <label class="form-label" asp-for="DataNascimento">
                            Data de Nascimento <i class="bi bi-pencil-fill ms-2"></i>
                        </label>
                        <input asp-for="DataNascimento" type="date" class="form-control bg-dark text-warning border-0 text-center"/>
                        <span asp-validation-for="DataNascimento" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-6 mb-3">
                        <label class="form-label" asp-for="CPF">
                            CPF <i class="bi bi-pencil-fill ms-2"></i>
                        </label>
                        <input asp-for="CPF" class="form-control bg-dark text-warning border-0 text-center"/>
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                </div>
                <footer class="mt-3">
                    <div class="row">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn-save">Atualizar Corredor</button>
                            <a asp-action="Get" asp-route-id="@Model.Id" class="btn btn-secondary text-center">Cancelar</a>
                        </div>
                    </div>
                </footer>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
