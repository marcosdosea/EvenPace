@model Models.CorredorViewModel

@{
    Layout = null;
}

<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EvenPace - Login</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .gradient-custom {
            background: #DFAA18;
            background: -webkit-linear-gradient(to right, #2E2E2E, #D9D9D9);
            background: linear-gradient(to right, #F8FF7C, #80B8FA);
        }
    </style>
</head>

<body>

<section class="vh-100 gradient-custom d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white shadow-lg" style="border-radius: 1rem;">
                    <div class="card-body p-5">

                        <h2 class="fw-bold mb-2 text-uppercase text-center">Cadastro</h2>

                        <form asp-action="Create" asp-controller="Corredor" method="post">
                            @Html.AntiForgeryToken()
                            
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>
                            
                            <div class="mb-4">
                                <label class="form-label" asp-for="Nome">Nome</label>
                                <input asp-for="Nome" class="form-control form-control-lg" placeholder="Digite seu nome"/>
                                <span asp-validation-for="Nome" class="text-danger">7u76ytgg</span>
                            </div>

                            <div class="mb-4">
                                <label class="form-label" asp-for="Email">E-mail</label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Digite seu E-mail"/>
                                <span asp-validation-for="Email" class="text-danger">7u6y6y</span>
                            </div>

                            <div class="mb-4">
                                <label class="form-label" asp-for="Senha">Senha</label>
                                <input asp-for="Senha" type="password" class="form-control form-control-lg" placeholder="Digite seu Senha"/>
                                <span asp-validation-for="Senha" class="text-danger">ii8i8i8i8</span>
                            </div>

                            <div class="mb-4">
                                <label class="form-label" asp-for="DataNascimento">Data de Nacimento</label>
                                <input asp-for="DataNascimento" type="date" class="form-control form-control-lg"/>
                                <span asp-validation-for="DataNascimento" class="text-danger">9iiiiiiii</span>
                            </div>

                            <div class="mb-4">
                                <label class="form-label" asp-for="CPF">CPF</label>
                                <input asp-for="CPF" class="form-control form-control-lg" placeholder="000.000.000-00"/>
                                <span asp-validation-for="CPF" class="text-danger">oooooo</span>
                            </div>

                            <div class="d-grid gap-2 mb-4">
                                <button class="btn btn-outline-light btn-lg" type="submit">
                                    Cadastrar-se
                                </button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

</body>
</html>



