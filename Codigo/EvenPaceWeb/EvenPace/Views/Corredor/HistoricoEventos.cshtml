@model IEnumerable<Models.HistoricoEventoViewModel>

<link rel="stylesheet" href="~/css/historico-eventos.css" />
<link rel="stylesheet" href="~/css/avaliacao-evento.css" />

<div class="historico-container">
    <h2>Histórico de Eventos Participados</h2>

    <table class="table historico-table">
        <thead>
            <tr>
                <th>Evento</th>
                <th>Data</th>
                <th>Local</th>
                <th>Ações</th>
            </tr>
        </thead>

        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td data-label="Evento">@item.Nome</td>
                <td data-label="Data">@item.Data.ToShortDateString()</td>
                <td data-label="Local">@item.Local</td>
                <td data-label="Ações">
                    <a asp-controller="Corredor"
                       asp-action="AvaliarEvento"
                       asp-route-idEvento="@item.IdEvento"
                       class="btn btn-avaliar">
                        Avaliar
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
