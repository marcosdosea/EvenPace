@model IEnumerable<Models.CorredorViewModel>

@{
    ViewData["Title"] = "Corredores";
}

<h2>Lista de Corredores</h2>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var corredor in Model)
    {
        <tr>
            <td>@corredor.Nome</td>
            <td>@corredor.Email</td>
            <td>
                <a asp-action="Get"
                   asp-route-id="@corredor.Id"
                   class="btn btn-sm btn-info">
                    Detalhes
                </a>

                <a asp-action="Edit"
                   asp-route-id="@corredor.Id"
                   class="btn btn-sm btn-warning">
                    Editar
                </a>

                <a asp-action="Delete"
                   asp-route-id="@corredor.Id"
                   class="btn btn-sm btn-danger">
                    Excluir
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
