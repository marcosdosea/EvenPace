@model EvenPaceWeb.Models.TelaInscricaoViewModel
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detalhes do Evento</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
      

        body {
            background: #f5c400;
            margin: 0;
            padding: 20px;
        }

    
        .phone {
            max-width: 900px;
            margin: 30px auto;
            background: #fff;
            border-radius: 14px;
            box-shadow: 0 4px 12px rgba(0,0,0,.08);
            display: flex;
            flex-direction: column;
            min-height: 90vh;
            overflow: hidden;
        }

        .header {
            padding: 14px 18px;
            font-size: 18px;
            cursor: pointer;
            border-bottom: 1px solid #eee;
        }

        .app-content {
            flex: 1;
            padding: 25px;
            overflow-y: auto;
        }

        .image-placeholder {
            width: 100%;
            height: 250px;
            background: #e9ecef;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
            font-weight: bold;
            margin-bottom: 25px;
        }

        h2 {
            font-weight: 700;
            text-align: center;
            text-transform: uppercase;
        }

        .evento-container {
            display: flex;
            align-items: flex-start;
            margin-bottom: 18px;
        }

        .icon-circle {
            background: #FFD700;
            border-radius: 50%;
            width: 38px;
            height: 38px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 14px;
            font-size: 18px;
            flex-shrink: 0;
        }

        .label-pequeno {
            font-size: .85rem;
            color: #6c757d;
        }

        .valor-negrito {
            font-weight: bold;
            margin: 0;
        }
.opcoes {
    display: flex;
    gap: 18px;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: 40px; 
}


        }

        .opcoes input {
            display: none;
        }

       .opcao {
    width: 90px;
    height: 55px;
    background: #000;
    color: #f1c40f;
    font-weight: bold;
    font-size: 20px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    position: relative;
    transition: .2s;

    margin-bottom: 30px; 
}


        .opcao::after {
    content: "";
    width: 20px;
    height: 20px;
    border: 2px solid #aaa;
    background: #fff;
    position: absolute;
    bottom: -28px;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 4px;
}


        .opcoes input:checked + .opcao {
            outline: 3px solid #f1c40f;
        }

        .opcoes input:checked + .opcao::after {
            content: "‚úì";
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
        }

      
        .btn-pagamento {
            background: #FFD700;
            border: none;
            border-radius: 30px;
            font-weight: bold;
            font-size: 18px;
            padding: 14px;
            width: 100%;
            margin-top: 50px;
        }

        .btn-pagamento:hover {
            background: #f1c40f;
        }

      
        @@media (max-width: 768px) {

            body {
                padding: 10px;
            }

            .phone {
                margin: 15px;
                border-radius: 12px;
            }

            .app-content {
                padding: 18px;
            }

            h2 {
                font-size: 1.6rem;
            }

            .evento-container {
                align-items: center;
            }

            .opcoes {
                display: flex;
    justify-content: center; 
    gap: 18px;
    flex-wrap: wrap;
            }

            .opcao {
                display: flex;
    gap: 18px;
    flex-wrap: wrap;
    justify-content: center;
            }
        }
    </style>
</head>

<body>

<div class="phone">

    <div class="header" onclick="history.back()">‚Üê Voltar</div>

    <form asp-controller="Inscricao" asp-action="TelaInscricao" method="post" class="app-content">
            @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Inscricao.IdEvento" />

        <div class="image-placeholder">[ Imagem do Evento ]</div>

        <h2 class="mb-4">Nome do Evento</h2>

        <div class="evento-container">
            <div class="icon-circle">üìç</div>
            <div>
                <span class="label-pequeno">Local</span>
                <p class="valor-negrito">Cidade / Estado</p>
            </div>
        </div>

        <div class="evento-container">
            <div class="icon-circle">üìÖ</div>
            <div>
                <span class="label-pequeno">Data do evento</span>
                <p class="valor-negrito">27/01/2026</p>
            </div>
        </div>

        <div class="evento-container">
            <div class="icon-circle">üì¶</div>
            <div>
                <span class="label-pequeno">Retirada de Kit</span>
                <p class="valor-negrito">26/01/2026 ‚Ä¢ 10h √†s 18h<br>Loja XYZ</p>
            </div>
        </div>

        <hr class="my-4">

        <h6 class="fw-bold mb-3 text-center">Escolha o percurso</h6>
        <div class="opcoes mb-4">
            <input type="radio" id="k3" name="Inscricao.Distancia" required>
            <label for="k3" class="opcao">3km</label>

            <input type="radio" id="k5" name="Inscricao.Distancia">
            <label for="k5" class="opcao">5km</label>

            <input type="radio" id="k10" name="Inscricao.Distancia">
            <label for="k10" class="opcao">10km</label>
        </div>

     

        <h6 class="fw-bold mb-3 text-center">Tamanho da camisa</h6>
        <div class="opcoes">
            <input type="radio" id="p" name="Inscricao.TamanhoCamisa" required>
            <label for="p" class="opcao">P</label>

            <input type="radio" id="m" name="Inscricao.TamanhoCamisa">
            <label for="m" class="opcao">M</label>

            <input type="radio" id="g" name="Inscricao.TamanhoCamisa">
            <label for="g" class="opcao">G</label>

            <input type="radio" id="gg" name="Inscricao.TamanhoCamisa">
            <label for="gg" class="opcao">GG</label>
        </div>

        <button type="submit" class="btn-pagamento">
            Realizar pagamento
        </button>

    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
