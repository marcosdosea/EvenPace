@model EvenPaceWeb.Models.TelaInscricaoViewModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@Model.NomeEvento</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #d8b1b1;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .phone {
            width: 375px;
            height: 750px;
            background: #fff;
            border-radius: 24px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            box-shadow: 0 0 40px rgba(0,0,0,.3);
        }

        .app-content {
            flex: 1;
            overflow-y: auto;
            padding: 16px;
            padding-bottom: 80px;
        }

        .header {
            padding: 12px;
            font-size: 20px;
            cursor: pointer;
        }

        .badge-distance {
            border: 1px solid #ccc;
            padding: 6px 12px;
            border-radius: 20px;
            margin-right: 8px;
            font-weight: 500;
            display: inline-block;
        }

        .kit-card {
            display: flex;
            gap: 12px;
            border: 1px solid #eee;
            border-radius: 12px;
            padding: 10px;
            margin-bottom: 12px;
            align-items: center;
        }

        .bottom-nav {
            height: 65px;
            border-top: 1px solid #ddd;
            display: flex;
            justify-content: space-around;
            align-items: center;
            font-size: 12px;
            background: #fff;
        }

            .bottom-nav div {
                text-align: center;
            }
    </style>
</head>

<body>

    <div class="phone">

        <!-- Header -->
        <div class="header" onclick="history.back()">‚Üê</div>

        <!-- Conte√∫do -->
        <div class="app-content">

            <h6 class="fw-bold">@Model.NomeEvento</h6>

            <p class="mb-1">üìç @Model.Local</p>
            <p class="mb-1">üìÖ @Model.DataEvento.ToString("dd/MM/yyyy")</p>

            <p class="mb-3">@Model.Descricao</p>

            <!-- Percursos -->
            <h6 class="fw-bold mt-3">Percurso</h6>
            <div class="mb-3">
                @foreach (var percurso in Model.Percursos)
            {
                <span class="badge-distance">@percurso</span>
            }
            </div>

            <!-- Kits -->
            <h6 class="fw-bold">Escolha seu kit</h6>

            @foreach (var kit in Model.Kits)
        {
            <div class="kit-card">
                <div>
                    <div class="fw-bold">@kit.Nome</div>
                    <small>@kit.Descricao</small><br />
                    <span class="fw-bold">R$ @kit.Valor.ToString("N2")</span>
                </div>

                <form asp-action="SalvarInscricao" method="post" class="ms-auto">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Inscricao.IdEvento" value="@Model.IdEvento" />
                    <input type="hidden" name="Inscricao.IdKit" value="@kit.Id" />

                    <button class="btn btn-warning btn-sm">
                        Inscrever-se
                    </button>
                </form>
            </div>
        }

        </div>

      
        <div class="bottom-nav">
            <div>üè†<br />In√≠cio</div>
            <div>üèÜ<br />Conquistas</div>
            <div>üéüÔ∏è<br />Cupons</div>
            <div>üïì<br />Hist√≥rico</div>
            <div>üë§<br />Perfil</div>
        </div>

    </div>

</body>
</html>
