@model EvenPaceWeb.Models.TelaInscricaoViewModel
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@Model.NomeEvento</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>

      .image-placeholder {
    width: 100%;
    height: 220px;
    background: #eef1f4;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6c757d;
    font-size: .95rem;
    margin-bottom: 20px;
}

    body {
        background: #f5c400;
        margin: 0;
        padding: 20px;
    }

    .phone {
        max-width: 900px;              /* IGUAL ao primeiro */
        min-height: 90vh;
        margin: 30px auto;
        background-color: #fff;
        border-radius: 14px;
        box-shadow: 0 4px 12px rgba(0,0,0,.08);
        display: flex;
        flex-direction: column;
        overflow: hidden;
        font-size: 16px;               /* reduzido */
    }

    .header {
        padding: 14px 18px;
        font-size: 18px;
        cursor: pointer;
        border-bottom: 1px solid #eee;
    }

    .app-content {
        flex: 1;
        overflow-y: auto;
        padding: 25px;
    }

    h2 {
        font-size: 1.6rem;             /* igual ao outro */
    }

    h6 {
        font-size: 1rem;
    }

    .evento-container {
        display: flex;
        align-items: flex-start;
        margin-bottom: 18px;
    }

    .icon-circle {
        background-color: #FFD700;
        border-radius: 50%;
        width: 38px;                   /* igual */
        height: 38px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 14px;
        font-size: 18px;
        flex-shrink: 0;
    }

    .label-pequeno {
        font-size: .85rem;
        color: #6c757d;
    }

    .valor-negrito {
        font-weight: bold;
        font-size: 1rem;
        margin: 0;
    }

    .percurso-opcoes {
        display: flex;
        justify-content: center;
        gap: 18px;
        flex-wrap: wrap;
        margin: 12px 0 30px;
    }

    .badge-distance {
        border: 1px solid #000;
        padding: 10px 22px;
        border-radius: 999px;
        font-size: 1rem;
        font-weight: 600;
        background: #000;
        color: #FFD700;
    }

    .kit-card {
        display: flex;
        justify-content: space-between;
        gap: 14px;
        border: 1px solid #eee;
        border-radius: 12px;
        padding: 18px;
        margin-bottom: 16px;
        align-items: center;
    }

    .bottom-nav {
        height: 70px;                  /* levemente menor */
        border-top: 1px solid #ddd;
        display: flex;
        justify-content: space-around;
        align-items: center;
        font-size: 12px;
        background: #fff;
    }

    @@media (max-width: 768px) {
        body {
            padding: 10px;
        }

        .phone {
            margin: 15px;
            border-radius: 12px;
        }

        h2 {
            font-size: 1.5rem;
        }

        .kit-card {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }
    }
</style>

</head>

<body>

<div class="phone">

    <div class="header" onclick="history.back()">‚Üê Voltar</div>

   
    <div class="app-content">

        <form asp-controller="Inscricao"
              asp-action="TelaInscricao"
              method="post">

                @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Inscricao.IdEvento" />

          
            <div class="image-placeholder">
                [ Imagem do Evento ]
            </div>

            <h2 class="fw-bold text-center mt-2 mb-4">@Model.NomeEvento</h2>

            <div class="evento-container">
                <div class="icon-circle">üìç</div>
                <div>
                    <span class="label-pequeno">Local</span>
                    <p class="valor-negrito">@Model.Local</p>
                </div>
            </div>

            <div class="evento-container">
                <div class="icon-circle">üìÖ</div>
                <div>
                    <span class="label-pequeno">Data do evento</span>
                    <p class="valor-negrito">
                            @Model.DataEvento.ToString("dd/MM/yyyy")
                    </p>
                </div>
            </div>

            <strong>Sobre o Evento</strong>
            <p class="mb-4">@Model.Descricao</p>

            
            <h6 class="fw-bold text-center mt-4">Percurso</h6>
            <div class="percurso-opcoes">
                    @foreach (var percurso in Model.Percursos)
                    {
                        <span class="badge-distance">@percurso</span>
                    }
            </div>

           
                @if (!string.IsNullOrEmpty(Model.InfoRetiradaKit))
                {
                    <h6 class="fw-bold">Informa√ß√µes de retirada de kits</h6>
                    <p>
                        @Html.Raw(Model.InfoRetiradaKit.Replace("\n", "<br />"))
                    </p>
                }

         
                @foreach (var kit in Model.Kits)
                {
                    <div class="kit-card">
                        <div>
                            <div class="fw-bold">@kit.Nome</div>
                            <small>@kit.Descricao</small><br />
                            <span class="fw-bold">
                                R$ @kit.Valor.ToString("N2")
                            </span>
                        </div>

                        <a asp-controller="Inscricao"
                           asp-action="Tela1"
                           asp-route-id="@Model.IdEvento"
                           class="btn btn-warning btn-lg rounded-pill px-4">
                            Inscrever-se
                        </a>
                    </div>
                }

        </form>

    </div>

   
    <div class="bottom-nav">
        <div>üè†<br />In√≠cio</div>
        <div>üèÜ<br />Conquistas</div>
        <div>üéüÔ∏è<br />Cupons</div>
        <div>üïì<br />Hist√≥rico</div>
        <div>üë§<br />Perfil</div>
    </div>

</div>

</body>
</html>

