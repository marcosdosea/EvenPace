@model EvenPaceWeb.Models.TelaInscricaoViewModel


<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@Model.NomeEvento</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #d8b1b1;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .phone {
            width: 375px;
            height: 750px;
            background: #fff;
            border-radius: 24px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            box-shadow: 0 0 40px rgba(0,0,0,.3);
        }

        .app-content {
            flex: 1;
            overflow-y: auto;
            padding: 16px;
            padding-bottom: 80px;
        }

        .header {
            padding: 12px;
            font-size: 20px;
            cursor: pointer;
        }

        .badge-distance {
            border: 1px solid #ccc;
            padding: 6px 12px;
            border-radius: 20px;
            margin-right: 8px;
            font-weight: 500;
            display: inline-block;
        }

        .kit-card {
            display: flex;
            gap: 12px;
            border: 1px solid #eee;
            border-radius: 12px;
            padding: 10px;
            margin-bottom: 12px;
            align-items: center;
        }

        .bottom-nav {
            height: 65px;
            border-top: 1px solid #ddd;
            display: flex;
            justify-content: space-around;
            align-items: center;
            font-size: 12px;
            background: #fff;
        }

            .bottom-nav div {
                text-align: center;
            }
    </style>
</head>

<body>

    <div class="phone">

        <!-- Header -->
        <div class="header" onclick="history.back()">‚Üê</div>

        <!-- Conte√∫do -->
        <div class="app-content">

            <h6 class="fw-bold text-center mt-3 mb-4">@Model.NomeEvento</h6>

<style>
    /* Criamos um "embrulho" para empurrar o conte√∫do para a direita */
    .conteudo-deslocado {
        margin-left: 15%; /* Ajuste essa porcentagem para chegar no seu "quase meio" */
        max-width: 70%;   /* Limita a largura para o texto n√£o espalhar demais */
    }

    .evento-container {
        display: flex;
        align-items: flex-start;
        margin-bottom: 15px;
    }

    /* ... restante do seu CSS do icon-circle e info-column ... */
    .icon-circle {
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #FFD700;
        border-radius: 50%;
        min-width: 35px;
        height: 35px;
        margin-right: 12px;
        margin-top: 5px;
        font-size: 18px;
    }

    .info-column {
        display: flex;
        flex-direction: column;
    }

    .label-pequeno {
        font-size: 0.85rem;
        color: #6c757d;
        margin-bottom: 0;
        line-height: 1.2;
    }

    .valor-negrito {
        font-weight: bold;
        margin: 0;
        font-size: 1rem;
    }
</style>

<div class="conteudo-deslocado">

    <div class="evento-container">
        <div class="icon-circle">üìç</div>
        <div class="info-column">
            <span class="label-pequeno">Local:</span>
            <p class="valor-negrito">@Model.Local</p>
        </div>
    </div>

    <div class="evento-container">
        <div class="icon-circle">üìÖ</div>
        <div class="info-column">
            <span class="label-pequeno">Data do evento:</span>
            <p class="valor-negrito">@Model.DataEvento.ToString("dd/MM/yyyy")</p>
        </div>
    </div>

    <div style="margin-top: 20px;">
        <strong>Sobre o Evento</strong>
        <p class="mb-3 text-break">@Model.Descricao</p>
    </div>

</div>




            @if (!string.IsNullOrEmpty(Model.InfoRetiradaKit))
            {
            <div class="evento-container">
                <div class="icon-circle">üì¶</div>
                <div class="info-column">
                    <span class="label-pequeno">Retirada de Kit:</span>
                    <div class="valor-negrito">
                            @* O Html.Raw com Replace garante que as quebras de linha apare√ßam *@
                            @Html.Raw(Model.InfoRetiradaKit.Replace("\n", "<br />"))
                    </div>
                </div>
            </div>
            }


            <!-- Percursos -->
            <h6 class="fw-bold mt-3">Percurso</h6>
            <div class="mb-3">
                @foreach (var percurso in Model.Percursos)
                {
                    <span class="badge-distance">@percurso</span>
                }
            </div>

            <!-- Kits -->
            <h6 class="fw-bold">Escolha seu kit</h6>

            @foreach (var kit in Model.Kits)
            {
                <div class="kit-card">
                    <div>
                        <div class="fw-bold">@kit.Nome</div>
                        <small>@kit.Descricao</small><br />
                        <span class="fw-bold">R$ @kit.Valor.ToString("N2")</span>
                    </div>

                    <form asp-action="SalvarInscricao" method="post" class="ms-auto">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Inscricao.IdEvento" value="@Model.IdEvento" />
                        <input type="hidden" name="Inscricao.IdKit" value="@kit.Id" />

                  <a href="@Url.Action("Tela1", "Inscricao", new { id = Model.IdEvento })" class="btn btn-warning btn-sm rounded-3">
        Inscrever-se
    </a>
                </form>
            </div>
        }

        </div>


        <!-- Menu inferior -->
        <div class="bottom-nav">
            <div>üè†<br />In√≠cio</div>
            <div>üèÜ<br />Conquistas</div>
            <div>üéüÔ∏è<br />Cupons</div>
            <div>üïì<br />Hist√≥rico</div>
            <div>üë§<br />Perfil</div>
        </div>

    </div>

</body>
</html>
