@model Models.TelaInscricaoViewModel
<link rel="stylesheet" href="~/css/inscricao.css" />

<div class="mobile-container">

    <img src="~/imagens/@Model.ImagemEvento" class="event-banner" />

    <div class="event-card">
        <h2>@Model.NomeEvento</h2>
        <p>üìç @Model.Local</p>
        <p>üìÖ @Model.DataEvento.ToString("dd/MM/yyyy")</p>
    </div>

    <div class="section">
        <h3>Sobre o Evento</h3>
        <p>@Model.Descricao</p>
    </div>

    <div class="section">
        <h3>Percurso</h3>
        <div class="distance-buttons">
            @foreach (var p in Model.Percursos)
            {
                <button type="button" onclick="selecionarDistancia('@p')">@p</button>
            }
        </div>
    </div>

    <div class="section">
        <h3>Kits</h3>
        @foreach (var kit in Model.Kits)
        {
            <div class="kit-card">
                <img src="~/imagens/@kit.Imagem" />
                <div>
                    <h4>@kit.Nome</h4>
                    <p>R$ @kit.Valor.ToString("N2")</p>
                    <button type="button" onclick="selecionarKit(@kit.Id)">Selecionar</button>
                </div>
            </div>
        }
    </div>

    <form asp-action="SalvarInscricao" method="post">

        <input type="hidden" asp-for="Inscricao.IdEvento" />
        <input type="hidden" asp-for="Inscricao.IdKit" id="kitSelecionado" />
        <input type="hidden" asp-for="Inscricao.Distancia" id="distanciaSelecionada" />

        <div class="section">
            <label>Tamanho da Camisa</label>
            <select asp-for="Inscricao.TamanhoCamisa">
                <option>P</option>
                <option>M</option>
                <option>G</option>
            </select>
        </div>

        <button type="submit" class="btn-inscrever">INSCREVER-SE</button>
    </form>
</div>

<script>
function selecionarKit(id){
    document.getElementById("kitSelecionado").value = id;
}
function selecionarDistancia(d){
    document.getElementById("distanciaSelecionada").value = d;
}
</script>
