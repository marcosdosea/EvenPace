@model Models.InscricaoViewModel

<link rel="stylesheet" href="~/css/inscricao.css" />

<div class="mobile-container">

    <img src="~/imagens/@Model.ImagemEvento" class="event-banner" />

    <div class="event-card">
        <h2>@Model.NomeEvento</h2>
        <p>üìç @Model.Local</p>
        <p>üìÖ @Model.DataEvento.ToString("dd/MM/yyyy")</p>
    </div>

    <div class="section">
        <h3>Sobre o Evento</h3>
        <p>@Model.Descricao</p>
    </div>

    <div class="section">
        <h3>Percurso</h3>
        <div class="distance-buttons">
            @foreach (var p in Model.Percursos)
            {
                <button
                    type="button"
                    class="btn-distance"
                    onclick="selecionarDistancia(this, '@p')">
                    @p
                </button>
            }
        </div>
    </div>

    <div class="section">
        <h3>Kits</h3>

        @foreach (var kit in Model.Kits)
        {
            <div class="kit-card">
                <img src="~/imagens/@kit.Imagem" class="kit-img" />

                <div class="kit-info">
                    <div class="kit-title">@kit.Nome</div>
                    <div class="kit-price">R$ @kit.Valor.ToString("N2")</div>

                    <button
                        type="button"
                        class="btn-kit"
                        onclick="selecionarKit(this, @kit.Id)">
                        Selecionar
                    </button>
                </div>
            </div>
        }
    </div>

    <form asp-action="SalvarInscricao" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Inscricao.IdEvento" />
        <input type="hidden" asp-for="Inscricao.IdKit" id="kitSelecionado" />
        <input type="hidden" asp-for="Inscricao.Distancia" id="distanciaSelecionada" />
        <input type="hidden" asp-for="Inscricao.IdCorredor" />

        <div class="section">
            <label>Tamanho da Camisa</label>
            <select asp-for="Inscricao.TamanhoCamisa" class="input-select">
                <option value="">Selecione</option>
                <option>P</option>
                <option>M</option>
                <option>G</option>
            </select>
            <span asp-validation-for="Inscricao.TamanhoCamisa"></span>
        </div>

        <button type="submit" class="btn-inscrever">
            INSCREVER-SE
        </button>
    </form>
</div>
