@model Models.InscricaoViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
<meta charset="utf-8" />
<title>@Model.NomeEvento</title>
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
body {
    background: #f5c400;
}
.app-card {
    background: #fff;
    border-radius: 1rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 85vh; /* altura igual √† segunda tela */
    position: relative;
    box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15); /* sombra para efeito de cart√£o */
}
.header {
    padding: 18px;
    border-bottom: 1px solid #eee;
    cursor: pointer;
}
.app-content {
    flex: 1;
    overflow-y: auto;
    padding: 16px;
}
.image-placeholder {
    width: 100%;
    height: 220px;
    background: #eef1f4;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6c757d;
    font-size: .95rem;
    margin-bottom: 16px;
}
.event-title {
    font-weight: bold;
    text-align: center;
    margin-bottom: 12px;
}
.event-info {
    font-size: .9rem;
    color: #6c757d;
    margin-bottom: 16px;
}
.percurso-opcoes {
    display: flex;
    justify-content: center;
    gap: 12px;
    flex-wrap: wrap;
    margin: 12px 0 16px;
}
.badge-distance {
    border: 1px solid #000;
    padding: 8px 16px;
    border-radius: 999px;
    font-size: .9rem;
    font-weight: 600;
    background: #000;
    color: #FFD700;
}
.kit-card {
    display: flex;
    justify-content: space-between;
    gap: 12px;
    border: 1px solid #eee;
    border-radius: 12px;
    padding: 12px;
    margin-bottom: 12px;
    align-items: center;
}
.kit-card img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 10px;
}
.btn-inscrever {
    display: block;
    width: 80px;
    padding: 4px 0;
    background: #FFD700;
    color: #000;         
    text-align: center;
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.75rem;
    text-transform: uppercase;
    text-decoration: none;
    border: none;         
}
.bottom-nav {
    height: 70px;
    border-top: 1px solid #ddd;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 12px;
    background: #fff;
    flex-shrink: 0;
}
        @@media (max-width: 768px) {
    .app-card {
        height: 100vh;
        border-radius: 0;
    }
    .kit-card {
        flex-direction: column;
        align-items: flex-start;
    }
}
</style>
</head>

<body>

<section class="vh-100 d-flex align-items-center">
<div class="container">
<div class="row justify-content-center">
<div class="col-12 col-md-8 col-lg-6 col-xl-5">

<div class="app-card">

<div class="header" onclick="history.back()">‚Üê Voltar</div>

<div class="app-content">

                            @if (!string.IsNullOrEmpty(Model.ImagemEvento))
                            {
            <img src="@Url.Content($"~/imagens/{Model.ImagemEvento}")"
                 class="img-fluid mb-3"
                 style="width:100%; height:220px; object-fit:cover; border-radius:14px;" />
                            }
                            else
                            {
            <div class="image-placeholder">Sem imagem do evento</div>
                            }

    <div class="event-title">@Model.NomeEvento</div>

    <div class="event-info">
        üìç @Model.Local<br />
        üìÖ @Model.DataEvento.ToString("dd/MM/yyyy")
    </div>

    <strong>Sobre o Evento</strong>
    <p>@Model.Descricao</p>

    <h6 class="fw-bold text-center mt-3">Percurso</h6>
    <div class="percurso-opcoes">
                                @foreach (var percurso in Model.Percursos)
                                {
                <span class="badge-distance">@percurso</span>
                                }
    </div>

                            @if (!string.IsNullOrEmpty(Model.InfoRetiradaKit))
                            {
            <h6 class="fw-bold mt-3">Informa√ß√µes de retirada de kits</h6>
            <p>@Html.Raw(Model.InfoRetiradaKit.Replace("\n", "<br />"))</p>
                            }

                            @foreach (var kit in Model.Kits)
                            {
            <div class="kit-card">
                                    @if (!string.IsNullOrEmpty(kit.Imagem))
                                    {
                        <img src="@Url.Content($"~/imagens/{kit.Imagem}")" />
                                    }
                <div>
                    <div class="fw-bold">@kit.Nome</div>
                    <small>@kit.Descricao</small><br />
                    <span class="fw-bold">R$ @kit.Valor.ToString("N2")</span>
                </div>
                <a asp-controller="Inscricao"
                   asp-action="Create"
                   asp-route-id="@Model.IdEvento"
                   class="btn-inscrever">Inscrever-se</a>
            </div>
                            }

</div>

<div class="bottom-nav">
    <a asp-controller="Evento" asp-action="IndexUsuario" style="text-decoration:none; color:inherit;">üè†<br />In√≠cio</a>
    <div>üèÜ<br />Conquistas</div>
    <div>üéüÔ∏è<br />Cupons</div>
    <div>üïì<br />Hist√≥rico</div>
    <div>üë§<br />Perfil</div>
</div>

</div>

</div>
</div>
</div>
</section>

</body>
</html>