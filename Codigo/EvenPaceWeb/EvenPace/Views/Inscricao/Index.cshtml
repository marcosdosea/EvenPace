        .phone {
    width: 360px;              
    max-width: 100%;          
    height: 640px;             
    margin: 20px auto;
    background-color: #fff;
    border-radius: 30px;       
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    font-size: 16px;

   
    border: 1px solid #ccc;   
    position: relative;
}


        .header {
            padding: 14px 18px;
            font-size: 18px;
            cursor: pointer;
            border-bottom: 1px solid #eee;
        }

        .app-content {
            flex: 1;
            overflow-y: auto;
            padding: 25px;
        }

        .evento-container {
            display: flex;
            align-items: flex-start;
            margin-bottom: 18px;
        }

        .icon-circle {
            background-color: #FFD700;
            border-radius: 50%;
            width: 38px;
            height: 38px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 14px;
            font-size: 18px;
            flex-shrink: 0;
        }

        .label-pequeno {
            font-size: .85rem;
            color: #6c757d;
        }

        .valor-negrito {
            font-weight: bold;
            font-size: 1rem;
            margin: 0;
        }

        .percurso-opcoes {
            display: flex;
            justify-content: center;
            gap: 18px;
            flex-wrap: wrap;
            margin: 12px 0 30px;
        }

        .badge-distance {
            border: 1px solid #000;
            padding: 10px 22px;
            border-radius: 999px;
            font-size: 1rem;
            font-weight: 600;
            background: #000;
            color: #FFD700;
        }

        .kit-card {
            display: flex;
            justify-content: space-between;
            gap: 14px;
            border: 1px solid #eee;
            border-radius: 12px;
            padding: 18px;
            margin-bottom: 16px;
            align-items: center;
        }

/* Container principal da barra inferior */
.bottom-nav {
    height: 70px;
    border-top: 1px solid #ddd;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background: #fff; /* Fundo branco para a barra */
    position: sticky; /* Mant√©m no final do 'phone' */
    bottom: 0;
    width: 100%;
}

.nav-item {
    flex: 1;
    text-align: center;
    text-decoration: none; 
    color: #666; 
    font-size: 12px;
    transition: color 0.2s ease;
    background: none; 
    border: none;
    padding: 5px 0;
}


.nav-item:hover, .nav-item:active {
    color: #f5c400; 
    text-decoration: none;
}

.btn-inscrever:hover {
    background: #f5c400;
    color: #000;
}
        

        @@media (max-width: 768px) {
            .kit-card {
                flex-direction: column;
                align-items: flex-start;
            }
              .phone {
        height: 100vh;
        border-radius: 0;
    }


        }
    </style>
</head>

<body>
<div class="phone">

    <div class="header" onclick="history.back()">‚Üê Voltar</div>

    <div class="app-content">

            @if (!string.IsNullOrEmpty(Model.ImagemEvento))
            {
        <img src="@Url.Content($"~/imagens/{Model.ImagemEvento}")"
             class="img-fluid mb-4"
             style="width:100%; height:220px; object-fit:cover; border-radius:14px;" />
            }

            else
            {
        <div class="image-placeholder">
            Sem imagem do evento
        </div>
            }



        <h2 class="fw-bold text-center mt-2 mb-4">@Model.NomeEvento</h2>

        <div class="evento-container">
            <div class="icon-circle">üìç</div>
            <div>
                <span class="label-pequeno">Local</span>
                <p class="valor-negrito">@Model.Local</p>
            </div>
        </div>

        <div class="evento-container">
            <div class="icon-circle">üìÖ</div>
            <div>
                <span class="label-pequeno">Data do evento</span>
                <p class="valor-negrito">@Model.DataEvento.ToString("dd/MM/yyyy")</p>
            </div>
        </div>

        <strong>Sobre o Evento</strong>
        <p class="mb-4">@Model.Descricao</p>

        <h6 class="fw-bold text-center mt-4">Percurso</h6>
        <div class="percurso-opcoes">
                @foreach (var percurso in Model.Percursos)
                {
                        <span class="badge-distance">@percurso</span>
                }
        </div>

            @if (!string.IsNullOrEmpty(Model.InfoRetiradaKit))
            {
                    <h6 class="fw-bold">Informa√ß√µes de retirada de kits</h6>
                    <p>@Html.Raw(Model.InfoRetiradaKit.Replace("\n", "<br />"))</p>
            }

            <div class="kits-scroll">
            @foreach (var kit in Model.Kits)
            {
                    <div class="kit-card">

                    @if (!string.IsNullOrEmpty(kit.Imagem))
                    {
            <img src="@Url.Content($"~/imagens/{kit.Imagem}")"
                 width="90"
                 height="90"
                 style="object-fit:cover; border-radius:10px;" />
                    }

                        <div>
                            <div class="fw-bold">@kit.Nome</div>
                            <small>@kit.Descricao</small><br />
                            <span class="fw-bold">R$ @kit.Valor.ToString("N2")</span>
                        </div>

                            <a asp-controller="Inscricao"
       asp-action="Create"
       asp-route-id="@Model.IdEvento"
       class="btn btn-warning rounded-pill"
       style="font-size: 9px; padding: 2px 10px; font-weight: bold; text-transform: uppercase;">
        Inscrever-se
    </a>
                    </div>
            }

    </div>
    </div>



<div class="bottom-nav">
    <a asp-controller="Evento" asp-action="IndexUsuario" class="nav-item">
        üè†<br />In√≠cio
    </a>

    <div class="nav-item">üèÜ<br />Conquistas</div>
    <div class="nav-item">üéüÔ∏è<br />Cupons</div>
    <div class="nav-item">üïì<br />Hist√≥rico</div>
    <div class="nav-item">üë§<br />Perfil</div>
</div>
    </div>

</div>
</body>
</html>
