@model EvenPaceWeb.Models.TelaInscricaoViewModel
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@Model.NomeEvento</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>

        .kits-scroll {
    max-height: 320px; 
    overflow-y: auto;
    padding-right: 8px;
    margin-top: 16px;
}

        .image-placeholder {
            width: 100%;
            height: 220px;
            background: #eef1f4;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
            font-size: .95rem;
            margin-bottom: 20px;
        }

        body {
            background: #f5c400;
            margin: 0;
            padding: 0;
        }

        /* .phone {
            max-width: 900px;
            height: 100vh;
            margin: 30px auto;
            background-color: #fff;
